.form-label {
    @apply mb-2 block text-slate-700 select-none;
}

.form-input,
.form-textarea,
.form-select {
    @apply p-2 leading-normal block w-full border text-slate-700 bg-white font-sans rounded text-left appearance-none relative focus:border-indigo-400 focus:ring;
    &::placeholder {
        @apply text-slate-500 opacity-100;
    }
}

.form-select {
    @apply pr-6;

    background-image: url('data:image/png;base64,');
    background-size: 0.7rem;
    background-repeat: no-repeat;
    background-position: right 0.7rem center;

    &::-ms-expand {
        @apply opacity-0;
    }
}

.form-input.error,
.form-textarea.error,
.form-select.error {
    @apply border-red-500 focus:ring focus:ring-red-200;
}

.form-error {
    @apply text-red-700 mt-2 text-sm;
}
